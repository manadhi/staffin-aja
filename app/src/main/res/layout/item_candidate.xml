<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/normal_100"
    android:layout_marginEnd="@dimen/normal_100"
    android:layout_marginBottom="@dimen/normal_100"
    app:cardCornerRadius="@dimen/normal_100">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/normal_100">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_candidate"
            android:layout_width="@dimen/normal_300"
            android:layout_height="@dimen/normal_300"
            android:src="@color/purple_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_candidate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_100"
            tools:text="Tony Blank"
            android:textSize="@dimen/subtitle_01"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/img_candidate"
            app:layout_constraintTop_toTopOf="@+id/img_candidate" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_candidate_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Male"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_candidate_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_candidate_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_candidate_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="30 years old"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_candidate_gender"
            app:layout_constraintTop_toBottomOf="@+id/tv_candidate_gender" />

        <TextView
            android:id="@+id/tv_candidate_expired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXPIRED"
            android:textSize="@dimen/subtitle_01"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>